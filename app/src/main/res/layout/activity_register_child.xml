<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".Activities.RegisterChild">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="100">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/Main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <Button
                android:id="@+id/backBtnAddChild"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
                android:backgroundTint="@android:color/white" />

            <TextView
                android:id="@+id/nameVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="Students Registration"
                android:textColor="@color/white"
                />



        </androidx.appcompat.widget.Toolbar>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="50">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/group21"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/light_gray"
                android:layout_centerHorizontal="true"
                android:elevation="30dp"/>



            <EditText
                android:id="@+id/childnamereal"
                style="@style/edittext"
                android:layout_below="@id/user"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:inputType="text"
                android:ems="18"
                android:hint="Child Name"/>




            <Button
                style="@style/custom_btn"
                android:id="@+id/submitChild"
                android:layout_below="@id/childnamereal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:ems="13"
                android:text="Submit"/>

        </RelativeLayout>




    </LinearLayout>

</ScrollView>